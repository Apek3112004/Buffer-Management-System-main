modules = ["cpp-clang14"]
compile = "make"
run = "g++ -std=c++20 -Iinclude src/table.cpp -o table && ./table"

[nix]
channel = "stable-24_05"

[deployment]
build = ["sh", "-c", "make"]
run = ["sh", "-c", "g++ -std=c++20 -Iinclude src/table.cpp -o table && ./table"]

[workflows]
runButton = "Run Join"

[[workflows.workflow]]
name = "Build and Run"
author = 18972025
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "make table"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./bin/table"

[[workflows.workflow]]
name = "Build and Run Join"
author = 18972025
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "g++ -std=c++20 -O2 -Wall -Wextra -Iinclude src/join.cpp src/DiskManager.cpp src/Page.cpp -o bin/join"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./bin/join"

[[workflows.workflow]]
name = "Run Join"
author = 18972025
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "g++ -std=c++20 -O2 -Wall -Wextra -Iinclude src/join.cpp src/DiskManager.cpp src/Page.cpp -o bin/join"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./bin/join"
